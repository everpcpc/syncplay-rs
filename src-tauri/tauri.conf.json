{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Syncplayer",
  "version": "0.4.9",
  "identifier": "com.everpcpc.syncplay",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "withGlobalTauri": true,
    "security": {
      "csp": null,
      "capabilities": [
        "main"
      ]
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "decorations": true,
        "resizable": true,
        "title": "Syncplay",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "transparent": true,
        "backgroundColor": "#00000000",
        "titleBarStyle": "Overlay",
        "devtools": true,
        "hiddenTitle": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "resources": [
      "resources/placeholder.png",
      "resources/syncplay.lua",
      "resources/syncplayintf.lua"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/everpcpc/syncplay-tauri/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDk0NzVGOTVBNzZCRTg3QzcKUldUSGg3NTJXdmwxbEZGdlZqL1RrcGtJdXZJS0FFTkw3UitwWE1FaVgrK0RRdzNTUGxkbnU4OWUK"
    }
  }
}
